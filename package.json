{
  "name": "react.dev",
  "version": "1.0.0",
  "description": "ChatSphere - A React-based Electron application",
  "author": "Your Name",
    "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && node before-pack.js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "cross-env NODE_ENV=development npx electron electron.js",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"node electron-dev.js\" --kill-others --kill-others-on-fail",
    "electron-build": "cross-env NODE_ENV=production npm run build && electron-builder",
    "dist": "cross-env NODE_ENV=production npm run build && electron-builder --publish=never",
    "dist:msi": "cross-env NODE_ENV=production npm run build && electron-builder --win msi --publish=never",
    "dist:win": "cross-env NODE_ENV=production npm run build && electron-builder --win --publish=never"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "katex": "^0.16.25",
    "mermaid": "^11.12.0",
    "react": "^18.0.0",
    "react-bootstrap": "^2.10.1",
    "react-bootstrap-icons": "^1.11.3",
    "react-dom": "^18.0.0",
    "react-markdown": "^9.0.0",
    "react-scripts": "^5.0.1",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "latest",
    "remark-math": "^6.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "react-refresh": "^0.18.0",
    "sharp": "^0.34.4",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "build": {
    "appId": "com.reactdev.app",
    "productName": "ChatSphere",
    "extends": null,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "build/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/android-chrome-512x512.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/apple-touch-icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/android-chrome-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "msi": {
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
