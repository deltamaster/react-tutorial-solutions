{
  "manifest_version": 3,
  "name": "QnA Assistant",
  "version": "1.0",
  "description": "A Q&A assistant with conversation history and role switching",
  "action": {
    "default_title": "QnA Assistant",
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png",
      "48": "favicon-32x32.png",
      "128": "favicon-32x32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "favicon-32x32.png",
    "128": "favicon-32x32.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://jp-gw2.azure-api.net/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["favicon-16x16.png", "favicon-32x32.png", "avatar-belinda.jpg", "avatar-user-female.jpg", "avatar-user-male.jpg", "avator-adrien.jpg", "avatar-charlie.jpg", "avatar-diana.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
}
